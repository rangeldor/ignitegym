{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@dtos/*": ["./dtos/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@screens/*": ["./screens/*"],
      "@storage/*": ["./storage/*"],
      "@utils/*": ["./utils/*"],
      "@services/*": ["./services/*"],
      "@hooks/*": ["./hooks/*"],
      "@contexts/*": ["./contexts/*"],
      "@routes/*": ["./routes/*"],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  }
}